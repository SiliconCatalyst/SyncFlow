@page "/view"

<PageTitle>Product Entries</PageTitle>

<div class="view-container">
    <h2>Product Entries</h2>

    <div class="actions-bar">
        <button class="btn btn-primary" @onclick="LoadEntries">Refresh</button>
        <a href="/form" class="btn btn-secondary">Add New Entry</a>
    </div>

    @if (isLoading)
    {
        <div class="loading">Loading entries...</div>
    }
    else if (entries == null || !entries.Any())
    {
        <div class="no-data">No entries found.</div>
    }
    else
    {
        <div class="table-wrapper">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User Name</th>
                        <th>Product Model</th>
                        <th>Part Number</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Entry Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in entries)
                    {
                        <tr>
                            <td>@entry.Id</td>
                            <td>@entry.UserName</td>
                            <td>@entry.ProductModel</td>
                            <td>@entry.PartNumber</td>
                            <td>@entry.Quantity</td>
                            <td>@entry.Price.ToString("C")</td>
                            <td>@entry.EntryDateTime.ToString("g")</td>
                            <td>
                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteEntry(entry.Id)">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert @(isError ? "alert-error" : "alert-success")">
            @message
        </div>
    }
</div>

@code {
    private List<ProductEntryDto>? entries;
    private bool isLoading = true;
    private string message = "";
    private bool isError = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadEntries();
    }

    private async Task LoadEntries()
    {
        isLoading = true;
        try
        {
            entries = await ProductService.GetAllAsync();
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
            isError = true;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteEntry(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure?"))
            return;

        try
        {
            var success = await ProductService.DeleteAsync(id);
            if (success)
            {
                message = "Entry deleted successfully!";
                await LoadEntries();
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
            isError = true;
        }
    }
}